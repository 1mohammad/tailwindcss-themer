{
  "name": "tailwindcss-theming",
  "version": "0.0.1",
  "author": "ryanclementshax",
  "license": "MIT",
  "description": "A tailwindcss plugin to handle multiple themes for you automatically",
  "homepage": "https://github.com/RyanClementsHax/tailwindcss-theming#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RyanClementsHax/tailwindcss-theming.git"
  },
  "bugs": {
    "url": "https://github.com/RyanClementsHax/tailwindcss-theming/issues"
  },
  "main": "index.js",
  "scripts": {
    "build": "yarn clean && tsc --project tsconfig.build.json",
    "clean": "tsc --build --clean",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write",
    "format:all": "yarn format .",
    "lint:all": "yarn lint:js:all && yarn lint:styles:all",
    "lint:js": "eslint --fix",
    "lint:js:all": "yarn lint:js .",
    "lint:styles": "stylelint --allow-empty-input --fix",
    "lint:styles:all": "yarn lint:styles ./**/*.{scss,css}",
    "test": "jest",
    "test:all": "yarn lint:all && yarn type-check && yarn test",
    "prepare": "husky install"
  },
  "dependencies": {
    "color": "^4.1.0",
    "just-kebab-case": "^4.0.1",
    "just-unique": "^4.0.1",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/color": "^3.0.2",
    "@types/jest": "^27.0.3",
    "@types/jest-when": "^2.7.3",
    "@types/lodash": "^4.14.178",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-jest": "^25.3.0",
    "husky": "^7.0.4",
    "jest": "^27.4.4",
    "jest-watch-typeahead": "^1.0.0",
    "jest-when": "^3.4.2",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.1",
    "stylelint": "^14.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-scss": "^5.0.2",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-prettier": "^2.0.0",
    "tailwindcss": "2.2.19",
    "ts-jest": "^27.1.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.3"
  },
  "peerDependencies": {
    "tailwindcss": "2.2.19"
  }
}
